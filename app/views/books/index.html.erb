<h1>Searching for - <%= @search_term %> </h1>

<table border="1" class="col-md-4 col-sm-6">
  <tr>
    <th>Cover</th>
    <th>Title</th>
    <th>Authors</th>
    <th>Details</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag(book['image']) %>
      </td>
      <td><%= book['title'] %></td>
      <td><%= book['authors'] %></td>
      <td><%= link_to 'Details', details_book_path(id: book['id']) %></td>
    </tr>
  <% end %>
</table>
